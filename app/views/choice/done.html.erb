<div class="text-center">
  <div class="description">
    なるほど <span style="font-size: 30px;"><%= @character.name %></span> ですか。
  </div>
</div>

<div class="page-header-my">
  <h3>統計</h3>
</div>

<div class="my-table">
  <table class="table">
    <thead><tr><th>順位</th><th>Name</th><th>選択回数</th></tr></thead>
    <tbody>
      <% rank = 1 %>
      <% @summaries.each do |record| %>
        <tr>
          <td><%= rank %></td>
          <td><%= @chara_info[record.character_id] %></td>
          <td><%= record.selected_count %></td>
        </tr>
        <% rank = rank + 1 %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <button onclick="location.href='/'" class="btn btn-warning btn-lg" style="width:98%">トップページ</button>
</div>
