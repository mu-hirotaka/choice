<div class="text-center">
  <div class="quest"><%= @quest.content %></div>
  <div class="row">
    <div id="left-img" class="col-xs-6">
      <% left_img_path = ['/images/character/', @quest.id, '/', @left_character.character_id, '.png'].join() %>
      <img class="left-img" src="<%= left_img_path %>">
    </div>
    <div id="right-img" class="col-xs-6">
      <% right_img_path = ['/images/character/', @quest.id, '/', @right_character.character_id, '.png'].join() %>
      <img class="right-img" src="<%= right_img_path %>">
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <button id="left-choice-btn" class="btn btn-warning btn-lg" data-quest-id="<%= @quest.id %>" data-character-id="<%= @left_character.character_id %>" style="width:100%"><%= @left_character.name %></button>
    </div>
    <div class="col-xs-6">
      <button id="right-choice-btn" class="btn btn-warning btn-lg" data-quest-id="<%= @quest.id %>" data-character-id="<%= @right_character.character_id %>" style="width:100%"><%= @right_character.name %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <button onclick="location.href='#modal-left-done'" id="left-done-btn" class="btn btn-primary btn-lg" style="width:100%">決定</button>
    </div>
    <div class="col-xs-6">
      <button onclick="location.href='#modal-right-done'" id="right-done-btn" class="btn btn-primary btn-lg" style="width:100%">決定</button>
    </div>
  </div>
  <button id="other-result-btn" class="btn btn-danger btn-lg" style="width:50%">他の人の結果</button>
</div>

<div id="modal">
  <div id="modal-left-done">
    <a href="#" class="close_overlay">x</a>
    <span class="modal_window">
      <h2>確認</h2>
      <button id="left-modal-done-btn" class="btn btn-primary btn-lg">決定</button>
      <button onclick="location.href='#'" class="btn btn-warning btn-lg">キャンセル</button>
    </span>
  </div>
  <div id="modal-right-done">
    <a href="#" class="close_overlay">x</a>
    <span class="modal_window">
      <h2>確認</h2>
      <button id="right-modal-done-btn" class="btn btn-primary btn-lg">決定</button>
      <button onclick="location.href='#'" class="btn btn-warning btn-lg">キャンセル</button>
    </span>
  </div>
</div>
